{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@lib": ["./lib/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": ["app/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
